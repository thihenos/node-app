    "version": "0.2.0",
    "configurations": [
        {
            "type": "node2",
            "request": "launch",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["${file}", "--no-timeouts"],
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "COMMIT_EVENTS_IMMEDIATELY": "true"
            }
        }
    ]
}